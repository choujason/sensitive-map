    <!-- ImageUpload -->


    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:id="@+id/ShowImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/ButtonChooseImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ShowImageView"
        android:text="Choose "
        tools:layout_editor_absoluteY="279dp"
        app:layout_constraintRight_toLeftOf="@+id/ButtonUploadImage"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/Report"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ImageNameEditText"
        android:layout_below="@+id/ButtonChooseImage"
        android:hint="Enter Image Name Here"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/ButtonUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/ImageNameEditText"
        android:text="Upload"
        tools:layout_editor_absoluteY="279dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Report"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
